<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>

   <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>

  <h1>Books</h1>
  <table>
      <thead>
        <tr>
          <th>Title</th><th>Body</th><th colspan="3"></th>
        </tr>
      </thead>

      <% @books.each do |book| %>

      <tbody>
        <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
        </tr>
      </tbody>

      <% end %>

   </table>

  <h2>New book</h2>
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
        </li>
    <% end %>
  </ul>
    </div>
<% end %>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="field">

    <div>
      <label>Title</label>
    </div>

      <div>
        <%= f.text_field :title %>
      </div>

  </div>

  <div class="field">

    <div>
      <label>Body</label>
    </div>

    <div>
      <%= f.text_area :body %>
    </div>

  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>

<% end %>

</body>
</html>